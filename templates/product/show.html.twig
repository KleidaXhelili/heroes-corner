{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ product.titre }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ product.date ? product.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Dessinateur</th>
                <td>{{ product.dessinateur }}</td>
            </tr>
            <tr>
                <th>Scenariste</th>
                <td>{{ product.scenariste }}</td>
            </tr>
            <tr>
                <th>Editeur</th>
                <td>{{ product.editeur }}</td>
            </tr>
            <tr>
                <th>Resume</th>
                <td>{{ product.resume }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ product.prix }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ product.note }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('product_index') }}">back to list</a>

    <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
