{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1>Product index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Date</th>
                <th>Dessinateur</th>
                <th>Scenariste</th>
                <th>Editeur</th>
                <th>Resume</th>
                <th>Prix</th>
                <th>Note</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.titre }}</td>
                <td>{{ product.date ? product.date|date('Y-m-d') : '' }}</td>
                <td>{{ product.dessinateur }}</td>
                <td>{{ product.scenariste }}</td>
                <td>{{ product.editeur }}</td>
                <td>{{ product.resume }}</td>
                <td>{{ product.prix }}</td>
                <td>{{ product.note }}</td>
                <td>
                    <a href="{{ path('product_show', {'id': product.id}) }}">show</a>
                    <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('product_new') }}">Create new</a>
{% endblock %}
