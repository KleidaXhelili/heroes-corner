{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ post.titre }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{post.user}}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ post.contenu }}</td>
            </tr>
        </tbody>
    </table>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn">{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}

    <hr>

    <div class="container">
        <h4>Liste des commentaires</h4>
        {% for commentaire in commentaires %}
            Posté par {{ commentaire.user }} le {{commentaire.createdAt|date('Y-m-d H:i:s')}}
            <p> {{ commentaire.contenu}} </p>
        {% endfor %}
    </div>

    <a href="{{ path('post_index') }}">Retour à la liste</a>

    <a href="{{ path('post_edit', {'id': post.id}) }}">Modifier</a>

    {{ include('post/_delete_form.html.twig') }}
{% endblock %}
