{% extends 'base.html.twig' %}

{% block header %}
    {{ render(controller('App\\Controller\\Heroes\\BlogController::menu')) }}
{% endblock %}

{% block title %}Les articles{% endblock %}

{% block body %}
    
    <div class="container blog">
        {% for post in posts %}
        <h1 class="blog-category-title">{{ post.blogCategory}}</h1>
        {% endfor %}
    {% for post in posts %}
    <div class="card mb-3">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="{{ asset('uploads/images/blog/')}}{{ post.image }}" class="card-img" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">{{ post.titre }}</h5>
                    <p class="card-text">{{ post.resume }}</p>
                    <p class="card-date"> Publi√© le {{ post.createdAt ? post.createdAt|date('d-m-Y H:i:s') : '' }}</p>
                    <p class="card-cat">{{ post.blogCategory}}</p>
                    <a href="{{ path('post_show', {'id': post.id}) }}" class="btn">Lire</a>
                    <a href="{{ path('post_edit', {'id': post.id}) }}" class="btn">Modifier</a>
                </div>
            </div>
        </div>
    </div>
    {% else %}
    <div>
        <p>no records found</p>
    </div>
    {% endfor %}
    </div>



    <a href="{{ path('post_new') }}">Ajouter un nouvel article</a>
{% endblock %}

{% block footer %}
    {% include 'components/_footer.html.twig' %}
{% endblock %}
