{% extends 'layout-shop.html.twig' %}

{% block title %}Votre Panier{% endblock %}

{% block body %}
    <div class="bg-light p-3">
        <h1>Votre panier</h1>
    </div>
    {% if items | length > 0 %}
        <table class="table">
            <thead>
            <tr>
                <th>Produit</th>
                <th>Prix</th>
                <th>Quantité</th>
                <th>Total</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.product.titre }}</td>
                    <td>{{ item.product.prix }}</td>
                    <td>{{ item.quantity }}</td>
                    <td>{{ item.product.prix * item.quantity }}</td>
                    <td>
                        <a href="{{ path('cart_remove', {'id' : item.product.id}) }}" class="btn btn-danger btn-sm">Supprimer</a>
                        <i class="fas fa-trash"></i>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td colspan="3" class="text-right">Total : </td>
                <td>{{ total }}€</td>
                <td></td>
            </tr>
            </tfoot>
        </table>
    {% else %}
        <p>Votre panier est vide</p>
    {% endif %}

{% endblock %}
