{% extends 'base.html.twig' %}

{% block header %}
    {{ render(controller('App\\Controller\\Heroes\\ShopController::menu')) }}
{% endblock %}

{% block title %}Commande{% endblock %}

{% block body %}
    <h1>Commande</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>Quantité</th>
                <td>{{ order.quantite }}</td>
            </tr>
            <tr>
                <th>Numéro</th>
                <td>{{ order.numero }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('order_index') }}">Retour à la liste</a>

    <a href="{{ path('order_edit', {'id': order.id}) }}">Éditer</a>

    {{ include('order/_delete_form.html.twig') }}
{% endblock %}

{% block footer %}
    {% include 'components/_footer.html.twig' %}
{% endblock %}
