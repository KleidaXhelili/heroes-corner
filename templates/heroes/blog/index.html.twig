{% extends "layout-blog.html.twig" %}

{% block title %}
    Accueil du Blog
{% endblock %}

{% block body %}

    <main>

        <div class="container blog">

            <!--Carousel-->
            <div class="container">

                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <a href="{{ path('post_show', {'id': 9})}}"> 
                                <img src="{{ asset("../uploads/images/blog/covers.jpg") }}" class="d-block w-100" alt="...">
                            </a>
                            
                        </div>
                        <div class="carousel-item">
                            <a href="{{ path('post_show', {'id': 7})}}"> 
                                <img src="{{ asset("../uploads/images/blog/miyazakistudio.jpg") }}" class="d-block w-100" alt="...">
                            </a>
                        </div>
                        <div class="carousel-item">
                            <a href="{{ path('post_show', {'id': 6})}}"> 
                                <img src="{{ asset("../uploads/images/blog/angouleme.jpg") }}" class="d-block w-100" alt="...">
                            </a>
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

            <hr class="line">

            <div class="row latest-post-line">
                <div class="col-3 latest-post">
                    <p>Les derniers posts</p>
                </div>
                <div class="col-9 post-latest"></div>
            </div>

                {% for post in posts %}
                    <div class="card mb-3">
                        <div class="row no-gutters">
                            <div class="col-md-4">
                                <img src="{{ asset('uploads/images/blog/') }}{{ post.image }}" class="card-img" alt="...">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">{{ post.titre }}</h5>
                                    <p class="card-text">{{ post.resume }}</p>
                                    <p class="card-date"> Publi√©
                                        le {{ post.createdAt ? post.createdAt|date('d-m-Y H:i:s') : '' }}</p>
                                    <p class="card-cat">{{ post.blogCategory }}</p>
                                    <a href="{{ path('post_show', {'id': post.id}) }}" class="btn btn-danger ">Lire</a>
                                    <a href="{{ path('post_edit', {'id': post.id}) }}" class="btn btn-danger ">Modifier</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div>
                        <p>no records found</p>
                    </div>
                {% endfor %}

        </div>
    </main>
{% endblock %}

